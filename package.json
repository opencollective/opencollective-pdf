{
  "name": "opencollective-pdf",
  "version": "2.0.0",
  "description": "PDF generation service for Open Collective",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/index.js",
    "test": "START_SERVER=false vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --run --coverage",
    "test:update": "rm test/__snapshots__/*.png && vitest --run",
    "type:check": "tsc --noEmit",
    "dev": "tsx watch server/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "depcheck": "npx depcheck --ignores='server,@graphql-typed-document-node/core,@vitest/coverage-v8'",
    "script": "tsx $@",
    "graphql:update": "npm-run-all graphql:updateV1 graphql:updateV2 graphql:codegen",
    "graphql:codegen": "graphql-codegen --config scripts/config/graphql-codegen.ts && prettier server/graphql/types --write",
    "graphql:updateV1": "tsx ./scripts/update-gql-schemas.js http://localhost:3060/graphql/v1 server/graphql/schema.graphql && prettier server/graphql/schema.graphql --write",
    "graphql:updateV2": "tsx ./scripts/update-gql-schemas.js http://localhost:3060/graphql/v2 server/graphql/schemaV2.graphql && prettier server/graphql/schemaV2.graphql --write"
  },
  "dependencies": {
    "@ag-media/react-pdf-table": "^2.0.1",
    "@apollo/client": "3.13.8",
    "@opencollective/taxes": "5.1.0",
    "@react-pdf/renderer": "4.1.6",
    "dayjs": "1.11.13",
    "dotenv": "16.4.1",
    "express": "5.0.0",
    "express-rate-limit": "7.5.0",
    "i18n-iso-countries": "7.14.0",
    "lodash-es": "4.17.21",
    "pdf-fontkit": "1.8.9",
    "pdf-lib": "1.17.1",
    "qrcode": "1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-intl": "7.1.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.23.0",
    "@graphql-codegen/cli": "^5.0.5",
    "@types/express": "^5.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.0.8",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-plugin-formatjs": "^5.3.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "graphql": "^16.10.0",
    "nock": "^14.0.3",
    "node-fetch": "^3.3.2",
    "npm-run-all2": "^7.0.2",
    "pdf-visual-diff": "^0.14.0",
    "prettier": "3.5.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
