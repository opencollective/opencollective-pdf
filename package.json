{
  "name": "opencollective-pdf",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencollective/opencollective-pdf.git"
  },
  "private": true,
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "dependencies": {
    "@apollo/client": "3.3.21",
    "@opencollective/frontend-components": "0.4.0",
    "@styled-icons/feather": "10.47.0",
    "babel-plugin-formatjs": "10.5.13",
    "dayjs": "1.11.10",
    "dotenv": "16.4.1",
    "graphql": "14.7.0",
    "html-pdf": "^3.0.1",
    "i18n-iso-countries": "7.10.0",
    "lodash": "4.17.21",
    "moment": "2.30.1",
    "next": "^12.3.4",
    "next-transpile-modules": "9.1.0",
    "node-fetch": "2.7.0",
    "prop-types": "15.8.1",
    "qrcode.react": "3.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-intl": "6.6.2",
    "sanitize-html": "2.11.0",
    "styled-components": "5.3.10",
    "styled-system": "5.1.5"
  },
  "scripts": {
    "start": "next start -p ${PORT:-3333}",
    "dev": "next dev -p 3002",
    "build": "next build",
    "test": "TZ=UTC jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "codecov",
    "test:update": "TZ=UTC jest -u",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "commit": "git-cz",
    "cypress": "TZ=UTC cypress run",
    "prettier": "prettier \"*.@(js|json|md)\" \"@(components|lib|pages|scripts|test)/**/*.@(js|json|md)\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "depcheck": "npx depcheck"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/eslint-parser": "^7.11.0",
    "babel-plugin-styled-components": "^2.0.0",
    "codecov": "^3.8.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.56.0",
    "eslint-config-opencollective": "^3.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-styled-components": "^7.0.5",
    "prettier": "^3.0.0",
    "react-test-renderer": "^17.0.2",
    "url-loader": "^4.1.1"
  },
  "browser": {
    "html-pdf": false,
    "fs-extra": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "depcheck": {
    "ignores": [
      "jest-junit"
    ]
  }
}
