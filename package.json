      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/__fixtures__/",
      "/test/__helpers__/",
      "/test/__mocks__/",
      "/test/setup.js"
    ],
    "moduleNameMapper": {
