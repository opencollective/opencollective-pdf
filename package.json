{
  "name": "opencollective-pdf",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencollective/opencollective-pdf.git"
  },
  "private": true,
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "dependencies": {
    "@apollo/client": "3.3.21",
    "@babel/runtime": "7.22.3",
    "@opencollective/frontend-components": "0.4.0",
    "@styled-icons/feather": "10.47.0",
    "@styled-system/theme-get": "5.1.2",
    "babel-plugin-formatjs": "10.5.3",
    "cors": "2.8.5",
    "cross-fetch": "3.1.6",
    "dayjs": "1.11.8",
    "debug": "4.3.4",
    "dotenv": "16.1.4",
    "express": "4.18.2",
    "express-winston": "4.2.0",
    "graphql": "14.7.0",
    "graphql-request": "2.0.0",
    "html-pdf": "^3.0.1",
    "i18n-iso-countries": "7.6.0",
    "intl": "1.2.5",
    "lodash": "4.17.21",
    "moment": "2.29.4",
    "next": "^12.3.4",
    "next-transpile-modules": "9.1.0",
    "node-fetch": "2.6.11",
    "polished": "4.2.2",
    "prop-types": "15.8.1",
    "qrcode.react": "3.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-intl": "6.4.4",
    "sanitize-html": "2.10.0",
    "styled-components": "5.3.10",
    "styled-system": "5.1.5",
    "winston": "3.8.1"
  },
  "scripts": {
    "start": "next start -p ${PORT:-3333}",
    "dev": "next dev -p 3002",
    "build": "next build",
    "test": "TZ=UTC jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "codecov",
    "test:update": "TZ=UTC jest -u",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "commit": "git-cz",
    "cypress": "TZ=UTC cypress run",
    "prettier": "prettier \"*.@(js|json|md)\" \"@(components|lib|pages|scripts|test)/**/*.@(js|json|md)\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/eslint-parser": "^7.11.0",
    "@babel/node": "^7.14.7",
    "@babel/preset-env": "^7.14.8",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-react-intl": "^8.0.0",
    "babel-plugin-styled-components": "^2.0.0",
    "codecov": "^3.8.2",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.41.0",
    "eslint-config-opencollective": "^3.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "jest-styled-components": "^7.0.5",
    "prettier": "^2.3.2",
    "react-test-renderer": "^17.0.0",
    "shx": "^0.3.3",
    "url-loader": "^4.1.1"
  },
  "browser": {
    "html-pdf": false,
    "fs-extra": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/__fixtures__/",
      "/test/__helpers__/",
      "/test/__mocks__/",
      "/test/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "<rootDir>/test/__mocks__/fileMock.js"
    }
  }
}
